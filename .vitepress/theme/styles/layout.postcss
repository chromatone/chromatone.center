*::-webkit-scrollbar {
  @apply bg-transparent w-6px h-6px;
}

*::-webkit-scrollbar-thumb {
  transition: background 0.2s ease-in-out;
  @apply bg-transparent rounded-full;
}

*::-webkit-scrollbar-corner {
  @apply bg-transparent;
}

*:hover > ::-webkit-scrollbar-thumb {
  @apply bg-$c-scrollbar;
}

html {
  overflow-y: scroll;
  scroll-behavior: smooth;
  hyphens: auto;
  transition: all 600ms ease;
}

body {
  @apply bg-light-600 dark_(bg-dark-600) transition-all duration-600 ease-out;
  width: 100%;
  min-width: 320px;
  min-height: 100vh;
  line-height: 1.4;
  font-family: var(--font-family-base);
  font-size: 18px;
  font-weight: 400;
  color: var(--c-text);
  direction: ltr;
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: all 600ms ease;
}

main {
  display: block;
}

hr {
  border-bottom: 1px solid currentColor;
  margin: 4em 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  line-height: 1.25;
}

h1,
h2,
h3,
h4,
h5,
h6,
strong,
b {
  font-weight: 600;
}
@screen md {
  h1:hover .header-anchor,
  h1:focus .header-anchor,
  h2:hover .header-anchor,
  h2:focus .header-anchor,
  h3:hover .header-anchor,
  h3:focus .header-anchor,
  h4:hover .header-anchor,
  h4:focus .header-anchor,
  h5:hover .header-anchor,
  h5:focus .header-anchor,
  h6:hover .header-anchor,
  h6:focus .header-anchor {
    opacity: 1;
  }
}

@media screen and (min-width: 420px) {
  h1 {
    font-size: 2.2rem;
  }
}

h2 {
  margin-top: 2rem;
  margin-bottom: 1.25rem;
  border-bottom: 1px solid var(--c-divider);
  padding-bottom: 0.3rem;
  line-height: 1.25;
  font-size: 1.65rem;
  /* overflow-x: auto; */
}

h1 svg,
h2 svg,
h3 svg,
h4 svg {
  display: inline-block;
  margin-top: -4px;
}

.content svg {
  display: inline-block;
}

.content h3 {
  margin-top: 2rem;
  font-size: 1.35rem;
}

h4 {
  margin-top: 1rem;
  font-size: 1.15rem;
}

p,
ol,
ul {
  margin: 1rem 0;
  line-height: 1.7;
}

ul {
  list-style: circle;
}

a,
area,
button,
[role='button'],
input,
label,
select,
summary,
textarea {
  touch-action: manipulation;
}

a {
  text-decoration: none;
  color: var(--c-link);
  transition: color 140ms ease-in-out;
  font-weight: bold;
}

a:hover {
  text-decoration: underline;
  color: var(--c-link-hover);
}

a.header-anchor {
  float: left;
  margin-top: 0.125em;
  margin-left: -0.87em;
  padding-right: 0.23em;
  font-size: 0.85em;
  opacity: 0;
}

a.header-anchor:hover,
a.header-anchor:focus {
  text-decoration: none;
}

figure {
  margin: 0;
}

ul,
ol {
  padding-left: 1.25em;
}

table {
  width: auto;
  border-collapse: collapse;
  margin: 1rem 0;
  overflow-x: auto;
  white-space: pre-wrap;
}

tr:nth-child(2n) {
  @apply bg-gray-400 bg-opacity-2;
}

thead th {
  @apply font-sans;
}

th,
td {
  border-bottom: 1px solid var(--c-divider-light);
  padding: 0.5rem 1rem;
}

blockquote {
  @apply bg-gray-400 bg-opacity-5 rounded-r px-6 py-1 mt-6 opacity-85 border-l-2 border-$c-brand;
  color: var(--c-text);
}

form {
  margin: 0;
}

.theme.sidebar-open .sidebar-mask {
  display: block;
}

.theme.no-navbar > h1,
.theme.no-navbar > h2,
.theme.no-navbar > h3,
.theme.no-navbar > h4,
.theme.no-navbar > h5,
.theme.no-navbar > h6 {
  margin-top: 1.5rem;
  padding-top: 0;
}

.theme.no-navbar aside {
  top: 0;
}

@screen lg {
  .theme.no-sidebar aside {
    display: none;
  }

  .theme.no-sidebar main {
    margin-left: 0;
  }
}

.icon-button {
  display: flex;
  font-size: 1.05rem;
  border: 0;
  outline: none;
  background: none;
  color: var(--c-text);
  opacity: 0.8;
  cursor: pointer;
  user-select: none;
}
.icon-button.active {
  opacity: 1;
}
.icon-button:hover {
  opacity: 1;
}
.icon-button svg {
  margin: auto;
}
.external-link {
  opacity: 0.9;
}

.is-group {
  @apply border-1 shadow-inner shadow-md border-dark-300/30 dark_border-light-300/20 rounded-xl;
}

.text-button {
  @apply shadow m-1 p-2 rounded-lg border-1 bg-light-700 dark_bg-dark-700 border-dark-100/30 dark_border-light-100/60 transition-all duration-200 leading-none;
  &.note {
    @apply text-white p-2 font-bold opacity-50 border-2 rounded-lg;
    &.active {
      @apply transform scale-125;
    }
  }
  &.active {
    @apply opacity-100 border-current bg-dark-50  text-white dark_bg-light-900 dark_text-black;
  }
  &:hover {
    @apply border-current;
  }
}

.text-button::after {
  @apply w-40 bg-light-200 h-40 absolute z-100 block;
}

.external-link::after {
  content: '';
  display: inline-block;
  width: 1em;
  height: 1em;
  opacity: 0.5;
  margin-bottom: -1px;
  background-image: url('data:image/svg+xml;base64,');
}

.card {
  @apply shadow-xl p-4 my-40 bg-warm-gray-50 bg-opacity-20
  dark_(bg-warm-gray-700 bg-opacity-20) 
  sm_(p-12);
}

.tame {
  @apply opacity-30 transition duration-800 ease-in-out;
}

.tame:hover {
  @apply opacity-80;
}

.content {
  @apply m-auto py-8 z-6 m-1 sm_m-2 md_m-4 lg_m-8 xl_(m-16);
  & img {
    @apply my-4 mx-auto rounded-lg w-full min-h-320px;
  }
  &:empty {
    display: none;
  }
  & h1,
  h2,
  h3,
  h4,
  h5 {
    @apply max-w-40rem mx-auto p-4 w-full;
  }
  & ul,
  & ol {
    @apply w-full;
  }
  & p,
  ul,
  ol,
  blockquote,
  pre {
    @apply max-w-55ch h-auto flex-1 m-auto p-4;
  }
  & h1 {
    margin-top: 1.5rem;
    font-size: 1.9rem;
  }
  & > div {
    @apply flex flex-col items-stretch text-left;
  }
  & h2 + h3 {
    margin-top: 3rem;
  }
  & code {
    @apply text-xs border-1 border-current rounded-lg py-2px px-4px mx-1;
  }
  & table {
    @apply w-full max-w-55ch mx-auto;
  }
}

.fullscreen-container {
  @apply flex flex-col justify-center relative items-center  bg-light-400 dark_bg-dark-800 shadow-xl;
  &:fullscreen {
    @apply overflow-y-scroll;
  }
}
