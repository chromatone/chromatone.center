{
	"include": [
		"**/*.*",
		"*.md",
		"*.vue"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"#/*": [
				"../*"
			]
		},
		"jsx": "preserve",
		"esModuleInterop": true,
		"target": "esnext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"outDir": "lib/types"
	},
	"vueCompilerOptions": {
		"plugins": [
			"@vue/language-plugin-pug"
		]
	}
}