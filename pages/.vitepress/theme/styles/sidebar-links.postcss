.sidebar-links {
  margin: 0;
  padding: 0;
  list-style: none;
}

.sidebar-link-item {
  display: block;
  margin: 0;
  /* border-left: 0.25rem solid transparent; */
  color: var(--c-text);
}

a.sidebar-link-item:hover {
  text-decoration: none;
  color: var(--c-brand);
}

a.sidebar-link-item.active {
  color: var(--c-brand);
  @apply bg-blue-50 dark:bg-opacity-10 rounded-lg;
}

.sidebar > .sidebar-links {
  padding: 0.75rem 0 5rem;
}

@media (min-width: 720px) {
  .sidebar > .sidebar-links {
    padding: 1.5rem 0;
  }
}

.sidebar > .sidebar-links > .sidebar-link + .sidebar-link {
  padding-top: 0.5rem;
}

@media (min-width: 720px) {
  .sidebar > .sidebar-links > .sidebar-link + .sidebar-link {
    padding-top: 1.25rem;
  }
}

.sidebar > .sidebar-links > .sidebar-link > .sidebar-link-item,
.sidebar-link-item.head {
  padding: 0.35rem 1rem 0.35rem 1rem;
  text-transform: uppercase;
  font-size: 0.8rem;
  font-weight: 600;
  letter-spacing: 1px;
  opacity: 0.5;
}

.sidebar > .sidebar-links > .sidebar-link > a.sidebar-link-item.active {
  border-left-color: var(--c-brand);
  font-weight: 500;
}

.sidebar {
  @apply px-4;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-link-item {
  display: block;
  padding: 0.4rem 1.5rem 0.4rem 1rem;
  line-height: 1.4;
  font-size: 0.95rem;
  font-weight: 400;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > a.sidebar-link-item.active {
  border-left-color: var(--c-brand);
  font-weight: 500;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-link-item {
  display: block;
  padding: 0.3rem 1.5rem 0.3rem 2rem;
  line-height: 1.4;
  font-size: 0.9rem;
  font-weight: 400;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-link-item::before {
  content: '•';
  font-size: 1.2em;
  margin-top: -2px;
  position: absolute;
  margin-left: -0.9rem;
  opacity: 0.4;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-link-item {
  display: block;
  padding: 0.3rem 0.5rem 0.3rem 2.4rem;
  line-height: 1.4;
  font-size: 0.9rem;
  font-weight: 400;
}

.sidebar
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-links
  > .sidebar-link
  > .sidebar-link-item::before {
  content: '—';
  font-size: 1.2em;
  margin-top: -2px;
  position: absolute;
  margin-left: -1em;
  opacity: 0.4;
}
