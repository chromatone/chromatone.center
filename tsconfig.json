{
	"include": [
		"./"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"#/*": [
				"./*"
			]
		},
		"jsx": "preserve",
		"esModuleInterop": true,
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "lib/types",
		"skipLibCheck": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib/types",
		"types": [
			"vite/client"
		]
	},
	"vueCompilerOptions": {
		"plugins": [
			"@vue/language-plugin-pug"
		]
	}
}