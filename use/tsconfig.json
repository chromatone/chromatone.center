{
	"include": [
		"."
	],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"esModuleInterop": true,
		"target": "esnext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"declarationDir": "../lib/types",
		"skipLibCheck": true,
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"outDir": "../lib/types"
	},
	"typedocOptions": {
		"entryPoints": [
			"./*"
		],
		"out": "../content/support/docs/",
		"githubPages": false,
		"entryPointStrategy": "expand",
		"name": "Use-chromatone documentation",
		"defaultCategory": "Chomatone",
		"exclude": [
			"**/aubio.js"
		],
		"readme": "./README.md"
	}
}